def is_palindrome(s):
    s = s.lower()
    s = ''.join(e for e in s if e.isalnum())
    
    if len(s) < 2:
        return True
    if s[0] != s[-1]:
        return False
    return is_palindrome(s[1:-1])

# Test the function
string = "A man, a plan, a canal, Panama"
if is_palindrome(string):
    print(f"{string} is a palindrome.")
else:
    print(f"{string} is not a palindrome.")
